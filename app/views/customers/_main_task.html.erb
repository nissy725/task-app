
<body>
 <table class="table table-light table-striped table-bordered table-hover h-25">
   <thead>
     <tr>
       <th scope="col">#</th>
       <th scope="col">顧客名</th>
       <th scope="col">サービス名</th>
       <th scope="col">台数</th>
     </tr>
   </thead>

   <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td ><%= customer.id %></td>
        <td style="height: 10%, width: 30%"> <%= customer.name %>         </td>
        <td style="width: 30%"> <%= customer.product %>      </td>
        <td style="width: 30%"> <%= customer.count %>        </td>
      </tr>
    <% end %>
   </tbody>
 </table>
</body>


