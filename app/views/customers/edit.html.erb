<div class='chat-room-form'>
  <h1>登録見込先の編集</h1>
  <%=form_with model: @customer, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :顧客名, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: '顧客名を入力してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
     <div class='chat-room-form__field--left'>
       <%= f.label :商品名, class: 'chat-room-form__label'%>
     </div>
     <div class='chat-room-form__field--right'>
        <%= f.text_field :product, class: 'chat__room_name chat-room-form__input', placeholder: '商品名を入力してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :台数, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :count, class: 'chat__room_name chat-room-form__input', placeholder: '台数を入力してください'%>
      </div>
    </div>


      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>